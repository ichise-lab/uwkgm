#!/bin/bash

source bin/libs/inputs

manage.env.choose() {
    CHOICES=(
        "Development"
        "Production"
        "Production on a Kubernetes cluster"
    )

    VALUES=(
        dev
        prod
        kube
    )

    inputs.choices UWKGM_ENV "Environment" "Choose environment" "dev" "$UWKGM_ENV" "${CHOICES[@]}" "${VALUES[@]}"
}