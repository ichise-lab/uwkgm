#!/bin/bash

manage.conf.init() {
    mkdir -p conf

    manage.conf.load servers Server
    manage.conf.load databases Database
    manage.conf.load secrets Secret
    
    echo ""
}

manage.conf.load() {
    if [[ -f "conf/$1" ]]; then
        echo "[UWKGM: INFO] $2 configuration found."
    else
        cp "templates/cms/conf/$1.template" "conf/$1"
        echo "[UWKGM: INFO] $2 configuration not found. Created from a template."
    fi
}